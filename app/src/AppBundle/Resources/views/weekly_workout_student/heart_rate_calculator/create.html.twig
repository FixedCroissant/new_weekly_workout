{% extends 'weekly_workout/layout.html.twig' %}

{% block addworkout %}
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <h4>Please provide your new heart rate:</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {# you can read and display just one flash message type... #}
            {% for flash_message in app.session.flashBag.get('notice') %}
                <div class="flash-notice">
                    {{ flash_message }}
                </div>
            {% endfor %}

            <div class="col-md-3 col-md-offset-2">
              <h4>Instructions</h4>
                <ul>
                  <li>Enter your current age.</li>
                  <li>Enter your resting heartrate.</li>
                  <li>Select your Gender.</li>
                  <li>Click the calculate button.</li>
                  <br/>
                    <a href="{{ path('heartrate_index') }}">See your list of HeartRates</a>&nbsp;

              </ul>
            </div>
            <div class="col-md-4">
                {{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
